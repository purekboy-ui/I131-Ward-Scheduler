{
    "name": "secret-scanner",
    "description": "åµæ¸¬å¯èƒ½çš„å¯†é‘°/å¯†ç¢¼æ´©æ¼",
    "version": "1.0.0",
    "triggers": [
        {
            "event": "onFileSave",
            "filePatterns": [
                "*"
            ]
        },
        {
            "event": "preCommit",
            "filePatterns": [
                "*"
            ]
        }
    ],
    "action": {
        "type": "scan",
        "patterns": [
            {
                "name": "API Key",
                "regex": "(api[_-]?key|apikey)\\s*[=:]\\s*['\"][^'\"]{20,}['\"]",
                "severity": "critical"
            },
            {
                "name": "AWS Key",
                "regex": "AKIA[0-9A-Z]{16}",
                "severity": "critical"
            },
            {
                "name": "Private Key",
                "regex": "-----BEGIN (RSA |EC |DSA )?PRIVATE KEY-----",
                "severity": "critical"
            },
            {
                "name": "Password",
                "regex": "(password|passwd|pwd)\\s*[=:]\\s*['\"][^'\"]{8,}['\"]",
                "severity": "high"
            },
            {
                "name": "Bearer Token",
                "regex": "Bearer\\s+[a-zA-Z0-9_\\-\\.]+",
                "severity": "high"
            }
        ],
        "onMatch": {
            "severity": "critical",
            "message": "ğŸš¨ åµæ¸¬åˆ°å¯èƒ½çš„å¯†é‘°æ´©æ¼ï¼",
            "blockCommit": true,
            "showLineNumbers": true
        }
    },
    "excludePaths": [
        "node_modules/**",
        ".git/**",
        "*.md",
        "*.lock"
    ],
    "enabled": true
}